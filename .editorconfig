# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.tsx]
quote_type = single
indent_size = 2
indent_style = space
tab_width = 2
end_of_line = lf
max_line_length = 90

[*.ts]
quote_type = single
indent_size = 2
indent_style = space
tab_width = 2
end_of_line = lf
max_line_length = 90

[*.json]
indent_size = 2
indent_style = double
tab_width = 2
end_of_line = lf
max_line_length = 80

[*.js]
indent_size = 2
quote_type = single
indent_style = space
tab_width = 2
end_of_line = lf

[*.css]
indent_size = 2
end_of_line = lf

[*.scss]
indent_size = 2
end_of_line = lf

[*.md]
max_line_length = off
trim_trailing_whitespace = false

